// Export category names for easy access
export const categories = Object.keys(wordDatabase);

// Helper function to get words by category
export const getWordsByCategory = (categoryName) => {
  return wordDatabase[categoryName] || [];
};

// Helper function to get all words
export const getAllWords = () => {
  return Object.values(wordDatabase).flat();
};

// Helper function to get random words from a category
export const getRandomWords = (categoryName, count = 10) => {
  const words = wordDatabase[categoryName] || [];
  const shuffled = [...words].sort(() => Math.random() - 0.5);
  return shuffled.slice(0, Math.min(count, words.length));
};

export default wordDatabase;
